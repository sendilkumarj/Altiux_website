<script type="text/javascript">

var amiLoaded = false;

function onExit(){
	amiLoaded = false;
	console.log("onExit called...");
	abortAll();
}

window.onunload = onExit;

function abort(ajaxHandle){
	console.log("Aborting requests..");
	if((null != ajaxHandle) && (ajaxHandle.readyState != 0)){
		console.log("Aborted requests..");
		ajaxHandle.abort();
		ajaxHandle = null;
	}
	$("#content").empty().html('');
}


function abortAll(){
	console.log("abortAll called...");
	abort(actAuxPower);
	abort(actAuxUp);
	abort(actAuxLeft);
	abort(actAuxEnter);
	abort(actAuxRight);
	abort(actAuxDown);
	abort(actAuxPlay);
	abort(actAuxPause);
	abort(actAuxStop);
	abort(actAuxEject);

}


<!-- Initialization -->
$(document).ready(function(){

});




var actAuxPower = null;

function doActAuxPower()
{
	abort(actAuxPower);

 	// Put an animated GIF image insight of content
	$("#content").empty().html('<img src="##IMAGE_URL##loading.gif" align="middle"/>');
	actPower = $.ajax({
	  type: "POST",
	  url: "##CTRL_URL##actTogPower",
	  contentType: "text/xml; charset=utf-8",
	  crossDomain: true,
	  processData: false,
	  data: "<?xml version=\"1.0\"?><u:actTogPower xmlns:u=\"##SERVICE_TYPE##\"><argEmpty>0</argEmpty></u:actTogPower>",
	}).done(function( xml ) {
		$("#content").empty().html('');
	})
	.error(function() {
		//alert("error");
		//console.log("Error Occured");
	})
	.complete(function() {
		$("#content").empty().html('');
		actAuxPower = null;
	});

}



